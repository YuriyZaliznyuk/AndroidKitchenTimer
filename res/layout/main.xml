<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme2ex"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ua.android.kitchen.timer.MainActivity" >

    <EditText
        android:id="@+id/edtSeconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="@string/input_seconds_descr"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtSeconds"
        android:layout_below="@+id/edtSeconds"
        android:background="@drawable/red32"
        android:height="30dp"
        android:minHeight="30dp"
        android:text="@string/button_start_text"
        android:textColor="#FFFF00"
        android:textSize="30sp"
        android:width="120dp" />

    <TextView
        android:id="@+id/lblTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="0"
        android:textAllCaps="true"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblSeconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtSeconds"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        android:text="@string/seconds"
        android:textSize="16sp" />

</RelativeLayout>
